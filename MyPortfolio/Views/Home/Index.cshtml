@{
    ViewData["Title"] = "Home";
}
<div class="d-flex flex-column justify-content-center align-items-center text-center"
     style="min-height: 100vh; font-family: 'Poppins';">

    <div class="jumbotron text-center py-5 w-75 bg-transparent">
        <h1 class="display-4 fw-bold" style="color: #D67A31;">Welcome to My Portfolio</h1>
        <p class="lead" style="color: #aaa;">A showcase of my work and skills.</p>
        <a class="btn btn-lg fw-bold text-white"
           asp-controller="Portfolio" asp-action="Index"
           style="background-color: #D67A31; border-radius: 8px;">
            View Projects
        </a>
    </div>

    <div id="projectCarousel" class="carousel slide w-75" data-bs-ride="carousel" style="max-width: 800px;">
        <div class="carousel-inner shadow-lg" style="border-radius: 12px;">
            <div class="carousel-item active">
                <img src="https://img.freepik.com/premium-vector/online-ticket-booking-concept-watching-movie_294779-70.jpg"
                     class="d-block w-100"
                     alt="Project One"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold" style="color: #D67A31;"></h5>
                    <p class="text-white"></p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://wordpress.mapsted.com/wp-content/uploads/2022/05/Indoor-nav-4-1024x515.jpg"
                     class="d-block w-100"
                     alt="Project Two"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold" style="color: #D67A31;"></h5>
                    <p class="text-white"></p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://cg-new-drupal-site-s3-bucket.s3.ap-south-1.amazonaws.com/staging/s3fs-public/2020-12/cyril-blog-2.jpg"
                     class="d-block w-100"
                     alt="Project Three"
                     style="height: 400px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="fw-bold" style="color: #D67A31;"></h5>
                    <p class="text-white"></p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


